{{#if team.isAuthor}}
    <a href="#/edit/{{team._id}}" class="btn btn-default">Edit Info</a>
{{else}}
    {{#if team.isOnTeam}}
        <a href="#/leave/{{team._id}}" class="btn btn-default">Leave Team</a>
    {{else}}
        <a href="#/join/{{team._id}}" class="btn btn-default">Join Team</a>
    {{/if}}
{{/if}}